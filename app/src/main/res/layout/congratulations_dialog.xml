<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/congrats_image2"
        android:layout_width="92dp"
        android:layout_height="133dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:background="@drawable/blueflower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_game_over"
        app:layout_constraintVertical_bias="0.138" />

    <ImageView
        android:id="@+id/congrats_image"
        android:layout_width="92dp"
        android:layout_height="133dp"
        android:layout_marginEnd="152dp"
        android:layout_weight="1"
        android:background="@drawable/blueflower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/congrats_image2"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_game_over"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/txt_congrats_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Congratulations! \n        You won!"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/congrats_image2"
        app:layout_constraintTop_toBottomOf="@+id/txt_game_over"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/txt_game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

</androidx.constraintlayout.widget.ConstraintLayout>